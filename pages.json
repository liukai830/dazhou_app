{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/login",
			"style": {
				"app-plus": {"titleNView":false}
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"app-plus": {"titleNView":false}
			}
		},
		{
			"path": "pages/about/about"
		},
		{
			"path": "pages/process/process-monitoring",
			"style": {
				"navigationStyle": "custom" ,// 隐藏系统导航栏
				"navigationBarTextStyle": "white" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
			}
		},
		{
			"path": "pages/tech/tech-alarm",
			"style": {
				"navigationStyle": "custom" ,// 隐藏系统导航栏
				"navigationBarTextStyle": "white" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
			}
		}
	],
	"tabBar": {
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/imgs/tabbar/home.png",
				"selectedIconPath": "static/imgs/tabbar/home-selected.png"
			},
			{
				"pagePath": "pages/about/about",
				"text": "关于",
				"iconPath": "static/imgs/tabbar/about.png",
				"selectedIconPath": "static/imgs/tabbar/anout_selected.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "dazhou-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
